<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fantasy_bgr"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="25dp" >

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/CPIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@null"
            android:padding="2dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <SlidingDrawer
        android:id="@+id/slidingDrawer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:allowSingleTap="true"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:topOffset="0dp" >

        <LinearLayout
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/black_trans"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/up_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/navigate_up" >
            </ImageView>
        </LinearLayout>

        <ScrollView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/marbles" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:id="@+id/Notice_indicater"
                    android:layout_width="fill_parent"
                    android:layout_height="82dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/iron_style_bgr" >

                    <TextView
                        android:id="@+id/noticeview"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/NetStat_error" />

                    <TextView
                        android:id="@+id/str_notice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|top"
                        android:layout_margin="10dp"
                        android:text="@string/str_notice"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/noticebutton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right|center"
                        android:layout_margin="10dp"
                        android:background="@null"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_plus_selector" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/Next_class_indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="82dp"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/iron_style_bgr" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="15dp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|top"
                        android:layout_margin="10dp"
                        android:text="@string/str_rd"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/show_recentd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </SlidingDrawer>

</FrameLayout>