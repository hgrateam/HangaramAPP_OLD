<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp" >

        <RelativeLayout
            android:id="@+id/lCom16th"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="39dp"
            android:layout_marginTop="22dp" >

            <ImageButton
            	android:id="@+id/BCom16th"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/trans_frame_btn_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:text="@string/Act_Com16th"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="11dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/facebook_w" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lCom15th"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignTop="@+id/lCom16th"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/lCom16th" >

            <ImageButton
            	android:id="@+id/BCom15th"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/trans_frame_btn_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:text="@string/Act_Com15th"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="11dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/facebook_w" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lCom17th"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignLeft="@+id/lCom15th"
            android:layout_below="@+id/lCom15th"
            android:layout_marginTop="18dp" >

            <ImageButton
            	android:id="@+id/BCom17th"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/trans_frame_btn_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:text="@string/Act_Com17th"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="11dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/facebook_w" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lHGRency"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_toRightOf="@+id/lCom17th"
            android:layout_below="@+id/lCom15th"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp" >

            <ImageButton
            	android:id="@+id/BHGRency"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/trans_frame_btn_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:text="@string/Act_toHGRency"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="11dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/encyclopedia_w" />
        </RelativeLayout>

       
    </RelativeLayout>